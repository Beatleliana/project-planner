            <button class="boton" onclick="borrarArchivo({{this}})">Borrar</button>
        </div>
    {{/each}}
    </div>

    <h4>Paletas</h4>
    <div class="contenedor-uploadsCarpeta">
    {{#each paletas}}
        <div id="paleta" class="contenedor-archivo">
            <img src="uploads/{{../username}}/paletas/{{this}}" class="img-upload" title="{{this}}">
            <button class="boton" onclick="borrarArchivo({{this}})">Borrar</button>
        </div>
    {{/each}}
    </div>

    <h4>Bocetos</h4>
    <div class="contenedor-uploadsCarpeta">
    {{#each bocetos}}
        <div id="boceto" class="contenedor-archivo">
            <img src="uploads/{{../username}}/bocetos/{{this}}" class="img-upload" title="{{this}}">
            <button class="boton" onclick="borrarArchivo({{this}})">Borrar</button>
        </div>
    {{/each}}
    </div>
</div>

