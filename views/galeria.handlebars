<div class="contenedor-uploads">
    <h4>Referentes</h4>
    <div class="contenedor-uploadsCarpeta">
    {{#each referentes}}
        <div id="referente" class="contenedor-archivo">
            <img src="uploads/{{../username}}/referentes/{{this}}" class="img-upload" title="{{this}}">
            <button class="boton" onclick="borrarArchivo({{this}})">Borrar</button>
        </div>
    {{/each}}
    </div>

    <h4>Tipografías</h4>
    <div class="contenedor-uploadsCarpeta">
    {{#each tipografias}}
        <div id="tipografia" class="contenedor-archivo">
